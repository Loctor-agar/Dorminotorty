<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_detail_rq"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDarkk"
                app:contentInsetStartWithNavigation="0dp" />

        </android.support.design.widget.AppBarLayout>


        <TextView
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Заголовок:"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDarkk" />

        <TextView
            android:id="@+id/title_txt_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="Title"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Дата:"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDarkk" />

        <TextView
            android:id="@+id/date_txt_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Date"
            android:textSize="18dp" />

        <TextView
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Описание:"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDarkk" />

        <TextView
            android:id="@+id/description_txt_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Description"
            android:textSize="18dp" />

        <TextView
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Статус:"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDarkk" />

        <TextView
            android:id="@+id/status_txt_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Status"
            android:textSize="18dp" />

        <TextView
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Комната:"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDarkk" />

        <TextView
            android:id="@+id/room_txt_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="300"
            android:textSize="18dp" />

        <TextView
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Автор:"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDarkk" />

        <TextView
            android:id="@+id/author_txt_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Name"
            android:textSize="18dp" />

        <TextView
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Категория:"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDarkk" />

        <TextView
            android:id="@+id/category_txt_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Category"
            android:textSize="18dp" />

    </LinearLayout>
</ScrollView>